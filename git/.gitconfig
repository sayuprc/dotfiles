[core]
  quotepath = false
  preloadindex = true
  fscache = true
  autocrlf = false
  pager = delta --keep-plus-minus-markers
  editor = vim

[color]
  diff = auto
  status = auto
  branch = auto

[commit]
  template = ~/.config/git/.gitmessage

[gc]
  auto = 256

[pull]
  rebase = false

[init]
  defaultBranch = main

[credential]
  helper = manager-core

[diff]
  tool = vimdiff

[difftool]
  prompt = false

[merge]
  tool = vimdiff

[mergetool]
  prompt = false

[interactive]
  diffFilter = delta --color-only

[include]
  path = ~/.config/git/themes.gitconfig

[delta]
  line-numbers = true
  side-by-side = true
  syntax-theme = Monokai Extended
  navigate = true

[alias]
  i = init

  st = status

  a = add

  c = commit
  cm = commit -m

  b = branch

  co = checkout
  cob = checkout -b

  m = merge

  f = fetch

  d = difftool

  l = log
  la = log --name-status
  ls = log --oneline
  lg = log --graph

  sw = switch
